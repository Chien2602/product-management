extends defaults/defaultAuth

block main

    #loginContainer.form-container.active
      h2 Sign Up
      form#loginForm
        .form-group
          label(for="registerUsername") Username
          input(type="text", id="registerUsername", name="registerUsername", required)
        .form-group
          label(for="fullName") Full Name
          input(type="text", id="fullName", name="fullName", required)
        .form-group
          label(for="province") Province/City
          select#province(name="province", required)
            option(value="" disabled selected) Select your province/city
        .form-group
          label(for="loginPassword") Password
          input(type="password", id="loginPassword", name="loginPassword", required)
        .form-group
          label(for="confirmPassword") Confirm Password
          input(type="password", id="confirmPassword", name="confirmPassword", required)
        button(type="submit") Sign Up
      .switch-container
        p.switch(style="margin-right: 10px") You already have an account?
        a(href="http://localhost:3000/login")  Login