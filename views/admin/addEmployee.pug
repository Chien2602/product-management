block main
  .form-container
    h2 THÊM NHÂN VIÊN
    form#addEmployeeForm
      .form-group
        label(for="employeeID") Mã nhân viên
        input(type="text", id="employeeID", name="maNhanVien", required)

      .form-group
        label(for="fullName") Họ và tên
        input(type="text", id="fullName", name="hoTen", required)

      .form-group
        label(for="gender") Giới tính
        select(id="gender", name="gioiTinh", required)
          option(value="Nam") Nam
          option(value="Nữ") Nữ
          option(value="Khác") Khác

      .form-group
        label(for="dob") Ngày sinh
        input(type="date", id="dob", name="ngaySinh", required)

      .form-group
        label(for="address") Địa chỉ
        input(type="text", id="address", name="diaChi")

      .form-group
        label(for="phone") Số điện thoại
        input(type="text", id="phone", name="sdt")

      .form-group
        label(for="email") Email
        input(type="email", id="email", name="email", required)

      .form-group
        label(for="salary") Lương
        input(type="number", id="salary", name="luong")

      button(type="submit") Thêm nhân viên

      .switch-container
        p.switch(style="margin-right: 10px") Quay lại trang quản lý nhân viên?
        a(href="/employees") Danh sách nhân viên

    script.
      document.addEventListener('DOMContentLoaded', () => {
        const form = document.querySelector('#addEmployeeForm');  // Fixed selector

        form.addEventListener('submit', async (event) => {
          event.preventDefault(); // Ngăn reload trang

          const formData = new FormData(form);
          const productData = Object.fromEntries(formData);
          console.log(productData)

          try {
            const response = await fetch('http://localhost:3000/admin/addToEmployee/employee', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(productData),
            });

            const result = await response.json();

            if (response.ok) {
              alert('Sản phẩm đã được thêm thành công!');
            //-   window.location.href = '/admin/employee';
            } else {
              alert(`Thêm sản phẩm thất bại: ${result.error || 'Lỗi không xác định'}`);
            }
          } catch (error) {
            console.error('Error adding product:', error);
            alert('Có lỗi xảy ra. Vui lòng thử lại.');
          }
        });
      });

    style.
      /* Thiết lập cho toàn bộ trang */
      body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
      }

      /* Phần container của form */
      .form-container {
        width: 400px;
        margin: 50px auto;
        padding: 30px;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0px 12px 36px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
      }

      .form-container:hover {
        box-shadow: 0px 16px 48px rgba(0, 0, 0, 0.15);
        transform: translateY(-5px);
      }

      /* Tiêu đề form */
      h2 {
        text-align: center;
        font-size: 26px;
        color: #333;
        margin-bottom: 30px;
        font-weight: bold;
        letter-spacing: 1px;
      }

      /* Các nhóm input trong form */
      .form-group {
        margin-bottom: 20px;
      }

      /* Các nhãn của input */
      label {
        display: block;
        font-size: 16px;
        color: #333;
        margin-bottom: 8px;
        font-weight: bold;
      }

      /* Các input và textarea */
      input[type="text"],
      input[type="number"],
      input[type="url"],
      input[type="email"],
      input[type="date"],
      textarea,
      select {
        width: 100%;
        padding: 12px;
        margin-top: 5px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 6px;
        background-color: #f9f9f9;
        transition: border-color 0.3s ease, background-color 0.3s ease;
      }

      input[type="text"]:focus,
      input[type="number"]:focus,
      input[type="url"]:focus,
      textarea:focus,
      select:focus {
        border-color: #007bff;
        background-color: #e9f5ff;
        outline: none;
      }

      /* Textarea với chiều cao tự động */
      textarea {
        resize: vertical;
      }

      /* Button submit */
      button[type="submit"] {
        width: 100%;
        padding: 14px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
      }

      button[type="submit"]:hover {
        background-color: #218838;
        transform: translateY(-3px);
      }

      button[type="submit"]:active {
        background-color: #1e7e34;
      }

      /* Container cho link quay lại */
      .switch-container {
        text-align: center;
        margin-top: 30px;
      }

      .switch-container a {
        font-size: 16px;
        color: #007bff;
        text-decoration: none;
        transition: color 0.3s ease;
      }

      .switch-container a:hover {
        color: #0056b3;
        text-decoration: underline;
      }

      /* Các input có lỗi */
      input:invalid,
      textarea:invalid {
        border-color: black;
      }

      input:focus,
      textarea:focus {
        border-color: #007bff;
        outline: none;
      }
