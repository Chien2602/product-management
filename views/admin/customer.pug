extends ../defaults/defaultAdmin

block main
  link(rel="stylesheet", href="/css/admin/tableDefault.css")
  
  main(class="table", id="customers_table")
    section(class="table__header")
      h1 #{header}
      div(class="input-group")
        input(type="search", placeholder="Search Data..." class="inputText")

    section(class="table__body")
      table
        thead
          tr
            th(style="font-weight: bold; text-align: center;") ID
            th(style="font-weight: bold; text-align: center;") Username
            th(style="font-weight: bold; text-align: center;") Password
            th(style="font-weight: bold; text-align: center;") Họ và tên
            th(style="font-weight: bold; text-align: center;") Email
            th(style="font-weight: bold; text-align: center;") Địa chỉ
            th(style="font-weight: bold; text-align: center;") Ngày sinh
            th(style="font-weight: bold; text-align: center;") Hành động

        tbody
            each item in users
                tr(style="text-align: center;")
                    td #{item.cusID}
                    td #{item.Username}
                    td #{item.Password}
                    td #{item.FullName}
                    td #{item.Email}
                    td #{item.City}
                    td #{item.Date}
                    td
                        button.btn.btn-primary(style="border-radius: 5px; background-color: red") Xóa

  script.
    let url = new URL(window.location.href);
    const input = document.querySelector(".inputText"); // Chọn phần tử input
    if (input) {
      input.addEventListener('keydown', (event) => {
        if (event.key === 'Enter') {
          url.searchParams.set("title", input.value)
          window.location.href = url;
        }
      });
    }

  style. 
          /* Global table styles */
    .table {
      width: 100%;
      border-collapse: collapse;
    }

    .table th, .table td {
      text-align: center; /* Căn giữa theo chiều ngang */
      vertical-align: middle; /* Căn giữa theo chiều dọc */
      padding: 10px;
    }
