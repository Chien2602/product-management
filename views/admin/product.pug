extends ../defaults/defaultPage

block main
  h1(style="margin-bottom: 30px; text-align: center; padding-top: 70px; color: #333; font-size: 32px; font-weight: 600;") #{header}

  // Table with Bootstrap styling
  table.table.table-hover.table-sm(style="border-radius: 10px; overflow: hidden;")
    thead(style="background-color: #007bff; color: white;")
      tr
        th(style="font-weight: bold; text-align: center;") STT
        th(style="font-weight: bold; text-align: center;") Hình ảnh
        th(style="font-weight: bold; text-align: center;") Tiêu đề
        th(style="font-weight: bold; text-align: center;") Giá
        th(style="font-weight: bold; text-align: center;") Trạng thái
        th(style="font-weight: bold; text-align: center;") Hành động

    tbody
      each item, index in products
        tr(style="text-align: center;")
          td #{index + 1}
          td
            img(src=item.thumbnail, alt=item.title, width="100", height="auto", style="border-radius: 5px;")
          td #{item.title}
          td #{item.price}$ 
          td
            a(href="#", class=`status-link ${item.status}`, style="text-decoration: none; padding: 5px 10px; border-radius: 20px;") #{item.status}
          td
            button.btn.btn-primary(style="border-radius: 5px;") Chỉnh sửa
            button.btn.btn-danger(style="border-radius: 5px; margin-left: 10px;") Xóa
